{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>{{ 'Add a new user'|trans }} </h1>
{% endblock %}

{% block main %}
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.email) }}
            {{ form_row(form.roles) }}
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block header_actions_right %}
    <button class="btn btn-primary" type="submit" form="{{ form.vars.id }}" data-turbo="true">
        <i class="bi bi-plus-lg mr-2"></i>
        {{ 'Save'|trans }}
    </button>
{% endblock %}
