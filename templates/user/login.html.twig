{% extends '@SumoCodersFrameworkCore/user.html.twig' %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security')|raw }}</div>
    {% endif %}

    {{ form_start(form) }}
    {{ form_row(form.email) }}
    <div class="form-group">
        <div class="d-flex justify-content-between">
            {{ form_label(form.password) }}
            <a href="{{ url('forgot_password') }}">{{ 'I forgot my password'|trans }}</a>
        </div>

        {{ form_widget(form.password) }}
        <label class="form-check form-check-label">
            <input class="form-check-input" type="checkbox" name="_remember_me" checked>
            {{ 'Keep me logged in'|trans }}
        </label>
    </div>

    <input class="btn btn-block btn-secondary mb-4" type="submit" value="{{ 'Sign in'|trans }}" />
    {{ form_end(form) }}

    <p class="align-self-center">{{ 'New to x?'|trans }} <a href="{{ url('app_user_register') }}">{{ 'Sign up'|trans }}</a></p>
{% endblock %}
