{% extends '@SumoCodersFrameworkCore/user.html.twig' %}

{% block main %}
    {% if form.vars.submitted and form.vars.valid %}
        <p>{{ 'Check your email for a link to reset your password. If it doesnâ€™t appear within a few minutes, check your spam folder.'|trans }}</p>
